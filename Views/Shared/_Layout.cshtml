<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - IT Ticket System</title>
    <link href="@Url.Content("~/Content/themes/Site.css")" rel="stylesheet" type="text/css" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="bg-secondary">
    <nav class="navbar navbar-expand-sm navbar-dark fixed-top bg-dark">
        <div class="container">
            <div class="navbar-header">
        
                @Html.ActionLink("Help Desk Ticket System", "Index", "Home", new { area = "" }, new { @class = "navbar-brand text-danger" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-navr">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "text-danger" }) &nbsp;</li>
                    <li>@Html.ActionLink("Ticket Request", "Create", "Ticket", new { area = "" }, new { @class = "text-danger" })  &nbsp;</li>
                    <li>@Html.ActionLink("Open Ticket", "Open", "Ticket", new { area = "" }, new { @class = "text-danger" }) &nbsp;</li>
                    <li>@Html.ActionLink("Technician Form", "Index", "Ticket", new { area = "" }, new { @class = "text-danger" })  &nbsp;</li>

                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - IT Ticket System</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
